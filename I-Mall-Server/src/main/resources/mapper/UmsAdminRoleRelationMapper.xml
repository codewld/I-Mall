<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pers.codewld.imall.mapper.UmsAdminRoleRelationMapper">
    <insert id="insertRelation">
        INSERT INTO
        ums_admin_role_relation(admin_id, role_id)
        VALUES
        <foreach collection="roleIdList" item="item" separator=",">
            (#{adminId}, #{item})
        </foreach>
    </insert>

    <delete id="deleteRelationByAdminId">
        DELETE
        FROM ums_admin_role_relation
        WHERE admin_id = #{adminId}
    </delete>

    <delete id="deleteRelationByRoleId">
        DELETE
        FROM ums_admin_role_relation
        WHERE role_id = #{roleId}
    </delete>

    <select id="selectRoleListByAdminId" resultType="java.lang.Long">
        SELECT role_id
        FROM ums_admin_role_relation
        WHERE admin_id = #{adminId}
    </select>
</mapper>